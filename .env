VITE_MODEL_PATH=/model/murasame/Murasame.model3.json
# 眼睛跟随鼠标的最大上升度数
VITE_EYE_MAX_UP=0.5
VITE_ANGLE_MAX_UP=20
# 交互系统
VITE_TOUCH_MAP=0.1,0.19,0.39,0.53,1
VITE_TOUCH_PRIORITY=hair,face,xiongbu,qunzi,leg

# ====== Bubble & Visual Frame (左右对称调试) ======
# 使用“视觉矩形”对称边界时的宽度比例（相对 getBounds 宽度）。数值越小越内收。
VITE_VISUAL_FRAME_RATIO=0.7
# 视觉矩形最小宽度（DOM 像素），窗口过小时兜底。
VITE_VISUAL_FRAME_MIN_PX=100
# 视觉矩形左右额外内收/外扩（像素）。正值变宽，负值收窄。
VITE_VISUAL_FRAME_PADDING_PX=0

# 视觉矩形中心的计算方式：bounds | face
# - bounds：以 getBounds 的几何中心做对称（可能受发丝/留白影响）
# - face：基于面部 hitArea 估计中心，通常更符合肉眼观感
VITE_VISUAL_FRAME_CENTER=face

# 在计算后的视觉矩形基础上做水平偏移，用于微调对称观感；正值向右，负值向左。
VITE_VISUAL_FRAME_OFFSET_PX=-54
# 或按视觉矩形宽度的比例偏移（与上面相加），如 0.02 表示向右 2% 宽度。
VITE_VISUAL_FRAME_OFFSET_RATIO=0

# 两侧统一最大宽度，进一步保证左右观感一致：1=开启，0=关闭
VITE_BUBBLE_SYMMETRIC=1

# 可选：头部锚点位置（0~1），用于垂直对齐；不设置则按触摸映射推断
# VITE_BUBBLE_HEAD_RATIO=0.12